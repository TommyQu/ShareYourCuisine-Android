<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.toe.shareyourcuisine">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.orm.SugarApp">
        <meta-data android:name="DATABASE" android:value="syc.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.toe.shareyourcuisine.model" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SignInActivity"
            android:label="Sign In"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:label="Register"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.MessageActivity"
            android:label="Message"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.ProfileActivity"
            android:label="Profile"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".activity.CreateRecipeActivity"
                  android:label="Create Recipe"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.OneRecipeActivity"
                  android:label="One Recipe"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.RecipeResultActivity"
                  android:label="RecipeResult"
                  android:screenOrientation="portrait">
        </activity>

        <activity android:name=".activity.CreatePostActivity"
                  android:label="Create Post"
                  android:screenOrientation="portrait">
        </activity>

        <activity android:name=".activity.CreateEventActivity"
                  android:label="Create Event"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.OneEventActivity"
                  android:label="One Event"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.EventResultActivity"
                  android:label="EventResult"
                  android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>